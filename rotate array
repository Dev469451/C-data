// rotate array //
#include <iostream>
using namespace std;

int main() {
    int arr[] = {1, 2, 3, 4, 5, 6, 7};
    int n = sizeof(arr) / sizeof(arr[0]); 
    int k = 3; 
    
    int brr[n];
     int j = 0;
    
    for (int i = n - k; i < n; i++) {
        brr[j] = arr[i];
        j++;
    }

    for (int i = 0; i < n - k; i++) {
        brr[j] = arr[i];
        j++;
    }
    
    for (int i = 0; i < n; i++) {
        cout << brr[i] << " ";
    }

    return 0;
}
