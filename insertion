#include <iostream>
using namespace std;

struct Node {
    int data;
    Node* next;

    Node(int a) {
        data = a;
        next = NULL;
    }
};

// Insert at any given position
void insertionInLL(Node* head, int pos, int val) {
    Node* p = head;
    Node* q = nullptr;

    for (int i = 1; i < pos; i++) {
        q = p;
        p = p->next;
    }

    Node* newNode = new Node(val);
    newNode->next = p;
    q->next = newNode;
}

// Insert at the head (start) of the linked list
void insertionHead(Node*& head, int val) {   // <-- pass by reference
    Node* newNode = new Node(val);
    newNode->next = head;
    head = newNode;   // modifies actual head
}

// Function to print the linked list
void printList(Node* head) {
    Node* temp = head;
    while (temp != nullptr) {
        cout << temp->data << "  ";
        temp = temp->next;
    }
    cout << " " << endl;
}

int main() {
    Node* head = new Node(12);
    head->next = new Node(22);
    head->next->next = new Node(32);
    head->next->next->next = new Node(42);
    head->next->next->next->next = new Node(52);
    
    printList(head);

    insertionHead(head, 5);
    printList(head);

    insertionInLL(head, 3, 99);
    printList(head);

    return 0;
}
