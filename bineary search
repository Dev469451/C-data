#include <iostream>
using namespace std;

int main() {
    int arr[] = {1, 2, 2, 2, 3, 3, 4, 5, 6};
    int n = sizeof(arr) / sizeof(arr[0]);
    int target = 2;
    int low = 0, high = n - 1;
    int Occu = -1;

    while (low <= high) {
        int mid = low + (high - low) / 2;

        if (arr[mid] == target) {
            Occu = mid;        
            high = mid - 1;    
        } else if (arr[mid] < target) {
            low = mid + 1;
        } else {
            high = mid - 1;
        }
    }

    if (Occu != -1)
        cout << "First occurrence: " << target << "  " << Occu << endl;
    else
        cout << target << " not found in the array." << endl;

    return 0;
}
