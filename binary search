//  SEARCHING :-
//   1.Linear search
//   2.Binary search

 #include <iostream>
  using namespace std;
  
  int main(){
      int arr[8] = {1,4,6,8,10,14,17,20};
      int target = 8;
      
        int l=0,r=7;
            while(l<=r){
            int m = (l+r)/2;
            if(arr[m]== target){
                cout <<"Element found at index: " <<m;
                break;
            }
            else if(arr[m] < target) {
                l= m+r;
            }else {
                r= m-l;
            }
      }
      return 0;
  }
