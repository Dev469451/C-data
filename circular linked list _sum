#include <iostream>
using namespace std;

struct Node {
    int data;
    Node* next;

    Node(int a) {
        data = a;
        next = NULL;
    }
};

void printLLCircular(Node* head) {
    if (!head) return;
    Node* p = head;
    do {
        cout << p->data << " ";
        p = p->next;
    } while (p != head);
}

int sumCircular(Node* head) {
    if (!head) return 0;

    int sum = 0;
    Node* p = head;

    do {
        sum += p->data;
        p = p->next;
    } while (p != head);

    return sum;
}

int main() {
   
    Node* head = new Node(12);
    head->next = new Node(22);
    head->next->next = new Node(32);
    head->next->next->next = new Node(42);
    head->next->next->next->next = new Node(52);
    
    head->next->next->next->next->next = head;  

    printLLCircular(head);
    cout << endl;

    int total = sumCircular(head);
    cout << "Sum : " << total << endl;

    return 0;
}

    
